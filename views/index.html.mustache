<!doctype html>
<html>
  <head>
    <title>Website Generator</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <style>
      *,
      *:before,
      *:after {
        box-sizing: border-box;
      }

      html,
      body {
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Inter", sans-serif;
        height: 100vh;
        background: linear-gradient(45deg, #{{firstColor}}, #{{secondColor}});
        padding: 10% 15px 0 15px;
      }

      main {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 15px;
        background: rgba(255,255,255,0.1);
      }

      h1 {
        padding: 0;
        margin: 0 0 10px 0;
        text-align: center;
        font-size: 2rem;
        font-weight: 400;
      }

      @media screen and (min-width: 650px) {
        h1 {
          font-size: 3rem;
        }

        main {
          padding: 20px 50px;
        }
      }

      label {
        text-align: center;
        margin-bottom: 10px;
      }

      label,
      textarea {
        display: block;
        width: 100%;
      }

      textarea {
        border-radius: 10px;
        padding: 10px;
      }

      button {
        transition: all 0.5s;
        display: block;
        border-radius: 10px;
        border: 2px solid black;
        background: rgba(0, 0, 0, 0);
        appearance: none;
        padding: 8px 10px;
        font-size: 1.25rem;
        margin: 10px auto;
      }

      button:hover {
        background: rgba(0, 0, 0, 1);
        color: #fff;
      }

      #work-box {
        margin-top: 15px;
        text-align: center;
        font-size: 1.5rem;
      }
    </style>
    <script>
      const busyWork = [
        "Reticulating splines"
      ];
      const getRandomWork = () => {
        const workIndex = Math.floor(Math.random() * busyWork.length);
        return busyWork[workIndex];
      };

      let dotTimer;
      const addDot = (workBox) => {
        workBox.innerHTML += ".";
      };
      const doWork = () => {
        const workBox = document.getElementById("work-box");
        const work = getRandomWork();
        workBox.innerHTML = work;

        clearInterval(dotTimer);
        dotTimer = setInterval(() => addDot(workBox), 500);
      };

      const submitIdea = (e) => {
        e.preventDefault();

        const idea = e.target.idea.value;

        const form = document.forms[0];
        form.style = "display:none;";
        const animBox = document.getElementById("anim-box");
        animBox.style = "";
        const workBox = document.getElementById("work-box");
        workBox.style = "";

        doWork();
        const timer = setInterval(doWork, 2000);

        fetch("/generate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ idea }),
        }).then((res) => {
          if (res.status === 200) {
            res.json().then((body) => {
              form.style = "";
              animBox.style = "display:none;";
              workBox.style = "display:none;";
              clearInterval(timer);

              const { slug } = body;
              window.location = `/site/${slug}`;
            });
          }
        });
      };

      document.addEventListener("DOMContentLoaded", () => {
        /* document.getElementById("submit").style= */

        const form = document.forms[0];
        form.addEventListener("submit", submitIdea);
      });
    </script>
  </head>
  <body>
    <main>
      <h1>Website Generator</h1>
      {{{ballAnimation}}}
      <div id="work-box" style="display: none"></div>
      <form>
        <label for="idea">Tell me about your new website</label>
        <textarea name="idea" placeholder="My website..." rows="10" required></textarea>
        <button id="submit" type="Submit">Generate website</button>
      </form>
    </main>
  </body>
</html>
